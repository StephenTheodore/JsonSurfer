<UserControl x:Class="JsonSurfer.App.Views.Controls.JsonCodeEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <avalon:TextEditor Name="JsonTextEditor"
                           FontFamily="Consolas"
                           FontSize="{Binding CodeEditorFontSize}"
                           ShowLineNumbers="True"
                           WordWrap="False"
                           SyntaxHighlighting="Json"
                           VerticalScrollBarVisibility="Auto"
                           HorizontalScrollBarVisibility="Auto">
            <avalon:TextEditor.Options>
                <avalon:TextEditorOptions ShowBoxForControlCharacters="True"
                                          ShowEndOfLine="False"
                                          ShowSpaces="False"
                                          ShowTabs="False"
                                          IndentationSize="2"
                                          ConvertTabsToSpaces="True"
                                          EnableHyperlinks="False"/>
            </avalon:TextEditor.Options>
        </avalon:TextEditor>
    </Grid>
</UserControl>
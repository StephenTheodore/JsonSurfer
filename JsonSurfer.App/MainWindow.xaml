<Window
    x:Class="JsonSurfer.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:JsonSurfer.App.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JsonSurfer.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="{Binding WindowTitle}"
    Width="1600"
    Height="800"
    mc:Ignorable="d">

    <!--  Keyboard Shortcuts  -->
    <Window.InputBindings>
        <KeyBinding
            Key="O"
            Command="{Binding OpenFileCommand}"
            Modifiers="Ctrl" />
        <KeyBinding
            Key="S"
            Command="{Binding SaveFileCommand}"
            Modifiers="Ctrl" />
        <KeyBinding Key="F5" Command="{Binding ValidateJsonCommand}" />
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="150" MinHeight="100" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Menu and Toolbar  -->
        <DockPanel Grid.Row="0">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem
                        Command="{Binding OpenFileCommand}"
                        Header="_Open"
                        InputGestureText="Ctrl+O" />
                    <MenuItem
                        Command="{Binding SaveFileCommand}"
                        Header="_Save"
                        InputGestureText="Ctrl+S" />
                    <Separator />
                    <MenuItem
                        Command="{Binding ExitCommand}"
                        Header="E_xit"
                        InputGestureText="Alt+F4" />
                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem
                        Command="{Binding ValidateJsonCommand}"
                        Header="_Validate"
                        InputGestureText="F5" />
                </MenuItem>
            </Menu>
        </DockPanel>

        <!--  Main Content  -->
        <TabControl
            Grid.Row="1"
            Margin="5"
            SelectedIndex="{Binding SelectedTabIndex}">
            <TabItem Header="Code Editor">
                <controls:JsonCodeEditor DataContext="{Binding}" />
            </TabItem>

            <TabItem Header="Visual Editor">
                <Grid DataContext="{Binding}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <controls:JsonTreeView Grid.Column="0" DataContext="{Binding}" />
                    <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" />
                    <Grid Grid.Column="2">
                        <!-- PropertyGrid will go here -->
                        <TextBlock Text="PropertyGrid Placeholder" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>

        <!--  GridSplitter  -->
        <GridSplitter
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            Background="LightGray" />

        <!--  Error List Panel  -->
        <Grid Grid.Row="3" Background="#F8F9FA">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Padding="10,5"
                Background="#E9ECEF"
                BorderBrush="#DEE2E6"
                BorderThickness="0,0,0,1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,10,0"
                        FontWeight="Bold"
                        Text="Problems" />
                    <TextBlock
                        Margin="0,0,10,0"
                        Foreground="Red"
                        Text="{Binding ValidationResult.Errors.Count, StringFormat='{}{0} errors', FallbackValue='0 errors'}" />
                    <TextBlock Foreground="Orange" Text="{Binding ValidationResult.Warnings.Count, StringFormat='{}{0} warnings', FallbackValue='0 warnings'}" />
                </StackPanel>
            </Border>

            <DataGrid
                Grid.Row="1"
                AutoGenerateColumns="False"
                Background="White"
                BorderThickness="0"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                CanUserResizeRows="False"
                GridLinesVisibility="Horizontal"
                HeadersVisibility="Column"
                ItemsSource="{Binding ValidationResult.Errors}"
                MouseDoubleClick="ErrorList_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="80"
                        Binding="{Binding Type}"
                        Header="Type"
                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="Red" />
                                <Setter Property="FontWeight" Value="Bold" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="60"
                        Binding="{Binding Line}"
                        Header="Line"
                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="FontWeight" Value="Bold" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="60"
                        Binding="{Binding Column}"
                        Header="Column"
                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Message}"
                        Header="Description"
                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextWrapping" Value="Wrap" />
                                <Setter Property="Margin" Value="5,2" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!--  Status Bar  -->
        <StatusBar Grid.Row="4">
            <StatusBarItem>
                <TextBlock Text="{Binding IsModified, StringFormat='FileModified : {0}'}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>